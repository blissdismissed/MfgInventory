<%- include('../../shared/includes/head', { pageTitle: 'Signup'}) %>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Create New Account</h1>
    <form action="/signup" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
      <p>
        <label for="emailField">E-mail</label>
        <input type="email" id="emailField" name="email" required>
      </p>
      <p>
        <label for="confirm-emailField">Confirm E-mail</label>
        <input type="email" id="confirm-emailField" name="confirm-email" required>
      </p>
      <p>
        <label for="passwordField">Password</label>
        <input type="password" id="passwordField" name="password" minlength="6" required>
      </p>
      <hr>
      <p>
        <label for="fullnameField">Full Name</label>
        <input type="text" id="fullnameField" name="fullname" required>
      </p>      
      <p>
        <label for="streetField">Street</label>
        <input type="text" id="streetField" name="street" required>
      </p>
      <p>
        <label for="postalField">Postal Code</label>
        <input 
          type="text" 
          id="postalField" 
          name="postal" 
          minlength="5" 
          maxlength="5" 
          required>
      </p>
      <p>
        <label for="cityField">City</label>
        <input type="text" id="cityField" name="city" required>
       </p>
       <button class="btn">Create Account</button>
       <p id="switch-form"><a href="/login">Login instead</a></p>
    </form>
  </main>
<%- include('../../shared/includes/footer') %>

